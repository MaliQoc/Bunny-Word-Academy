@model WebApplication8.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Üye ol</title>
    <link rel="stylesheet" href="~/css/stylekayitol.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
</head>
<body>
    <section class="section1">
        <img src="~/images/logo.png" alt="Logo" />
    </section>
    <hr />
    <div class="box">
        <h3>Üye ol</h3>
        <form asp-action="Register" method="post">
            <div class="input mb-3">
                <input type="text"
                       placeholder="Kullanıcı Adı"
                       asp-for="Username"
                       class="form-control"
                       required /><br /><br />
                <input type="email"
                       placeholder="Email"
                       asp-for="Email"
                       class="form-control"
                       required /><br /><br />
                <input type="password"
                       placeholder="Şifre"
                       asp-for="Password"
                       class="form-control"
                       required /><br /><br />
                <button type="submit" id="btn" class="btn btn-primary">ÜYE OL</button>
            </div>
        </form>
        <p>
            Zaten bir hesabınız var
            <a href="/Account/Login"> <span>Giriş Yapın</span></a>
        </p>
        <div class="ln"></div>
        <h5>ya da Bunlar ile Üye Ol</h5>
        <div class="icons">
            <a href=""><i class="fab fa-facebook-f" style="width: 35px"></i></a>
            <a href=""><i class="fab fa-google" style="width: 35px"></i></a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>
