@{
	var username = Context.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Yabancı Dil Eğitim Sistemi</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
		  rel="stylesheet"
		  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
		  crossorigin="anonymous" />
	<link rel="stylesheet"
		  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
		  integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
		  crossorigin="anonymous"
		  referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="~/css/style.css" />
</head>
<body style="background-color: white">
	<section>
		<nav class="navbar navbar-expand-lg" style="height: 80px">
			<div class="container-fluid div1">
				<img src="~/images/logo.png" alt="" style="width: 200px" />
				<button class="navbar-toggler"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#navbarScroll"
						aria-controls="navbarScroll"
						aria-expanded="false"
						aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarScroll">
					<ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll"
						style="--bs-scroll-height: 100px">
						<li class="nav-item d-flex align-items-center justify-content-center">
							<a href="/Account/Login" class="btn d-flex align-items-center justify-content-center">
								<i class="fa-solid fa-right-to-bracket me-2"></i> Giriş
							</a>
						</li>
						<li class="nav-item">
							<a href="/Account/Register" class="btn d-flex align-items-center justify-content-center">
								<i class="fa-solid fa-user-plus me-2"></i> Üye Ol
							</a>
						</li>
						<li class="nav-item d-flex align-items-center justify-content-center">
							<a href="/Message/Create" class="btn d-flex align-items-center justify-content-center">
								<i class="fa-solid fa-envelope me-2"></i> İletişim
							</a>
						</li>
						<li style="margin-left: 350px">
							<img src="~/images/türk.png" alt="" width="60px" />
						</li>
						<li style="margin-left: 10px; margin-right: 10px">
							<img src="~/images/america.png" alt="" width="60px" />
						</li>
					</ul>
					@if (!string.IsNullOrEmpty(username))
					{
						<ul class="navbar-nav ml-auto">
							<li class="nav-item">
								<span class="navbar-text">Hoş geldin, @username!</span>
							</li>
							<li class="nav-item">
								<form asp-controller="Account" asp-action="Logout" method="post">
									<button type="submit" class="btn btn-link nav-link"><i class="fa-solid fa-right-from-bracket"></i></button>
								</form>
							</li>
						</ul>
					}
				</div>
			</div>
		</nav>
	</section>
	<div class="image-container">
		<img src="~/images/ingilizce2.webp" alt="" class="image" />
		<div class="text-overlay" id="dynamicText"></div>
	</div>

	@if (!string.IsNullOrEmpty(username))
	{
		<div class="welcome-message">
			<h2>Hoş geldin, @username!</h2>
		</div>
	}

	<section class="section1">
		<h2>İngilizce Dil Seviye Paketleri</h2>

		<div class="container my-5">
			<div class="row justify-content-center">
				<div class="col-lg-8">
					<div class="card product-card mb-3 shadow">
						<div class="row g-0">
							<div class="col-xl-3 col-md-4">
								<a href="#" class="img-wrap">
									<img src="~/images/seviye1.png" alt="A1 Seviye" />
								</a>
							</div>
							<div class="col-xl-9 col-md-8 border-start">
								<div class="card-body">
									<a href="#"
									   class="h6 mb-3 title"
									   style="font-weight: bold; color: #80bcbd">
										A1 Seviye (Başlangıç)
									</a>
									<br /><br />
									<div class="mb-2">
										<span class="text-primary">
											Dil öğrenmek isteyen kişiler yeni bir dili öğrenmeye
											başlarken bu seviyede bulunurlar.
										</span>
									</div>
									<br />

									<div class="d-grid gap-2 d-md-block">
										<a href="/Home/A1" class="btn btn-primary">
											<i class="fa-solid fa-magnifying-glass"
											   style="color: white; margin-right: 10px"></i>İncele
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="card product-card mb-3 shadow">
						<div class="row g-0">
							<div class="col-xl-3 col-md-4">
								<a href="#" class="img-wrap">
									<img src="~/images/seviye1.png" alt="A2 Seviye" />
								</a>
							</div>
							<div class="col-xl-9 col-md-8 border-start">
								<div class="card-body">
									<a href="#"
									   class="h6 mb-3 title"
									   style="font-weight: bold; color: #4f6f52">
										A2 Seviye (Temel)
									</a>
									<br /><br />
									<div class="mb-2">
										<span class="text-primary">
											Başlangıç seviyesinin bir adım ilerisi olarak kabul
											edilir ve dil öğrenen kişi bu seviyede temel dil
											becerilerini geliştirmeye devam ederken, daha karmaşık
											konular ve durumlarla başa çıkabilme yeteneğini de
											kazanır.
										</span>
									</div>
									<br />

									<div class="d-grid gap-2 d-md-block">
										<a href="/Home/A2" class="btn btn-primary">
											<i class="fa-solid fa-magnifying-glass"
											   style="color: white; margin-right: 10px"></i>İncele
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="card product-card mb-3 shadow">
						<div class="row g-0">
							<div class="col-xl-3 col-md-4">
								<a href="#" class="img-wrap">
									<img src="~/images/seviye1.png" alt="B1 Seviye" />
								</a>
							</div>
							<div class="col-xl-9 col-md-8 border-start">
								<div class="card-body">
									<a href="#"
									   class="h6 mb-3 title"
									   style="font-weight: bold; color: #f4ce14">
										B1 Seviye (Orta Üstü)
									</a>
									<br /><br />
									<div class="mb-2">
										<span class="text-primary">
											B1 seviyesinde, dil öğrenen kişi, daha karmaşık cümle
											yapıları ve çeşitli konularda daha geniş bir kelime
											dağarcığı kullanarak iletişim kurabilir.
										</span>
									</div>
									<br />

									<div class="d-grid gap-2 d-md-block">
										<a href="/Home/B1" class="btn btn-primary">
											<i class="fa-solid fa-magnifying-glass"
											   style="color: white; margin-right: 10px"></i>İncele
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="card product-card mb-3 shadow">
						<div class="row g-0">
							<div class="col-xl-3 col-md-4">
								<a href="#" class="img-wrap">
									<img src="~/images/seviye1.png" alt="B2 Seviye" />
								</a>
							</div>
							<div class="col-xl-9 col-md-8 border-start">
								<div class="card-body">
									<a href="#"
									   class="h6 mb-3 title"
									   style="font-weight: bold; color: #f9b572">
										B2 Seviye (İleri)
									</a>
									<br /><br />
									<div class="mb-2">
										<span class="text-primary">
											Bu seviyede olan bir kişi, dili bağımsız bir şekilde
											etkin bir şekilde kullanabilir ve dilde daha karmaşık ve
											çeşitli konularda iletişim kurabilecek bir yetkinliğe
											sahiptir.
										</span>
									</div>
									<br />

									<div class="d-grid gap-2 d-md-block">
										<a href="/Home/B2" class="btn btn-primary">
											<i class="fa-solid fa-magnifying-glass"
											   style="color: white; margin-right: 10px"></i>İncele
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="card product-card mb-3 shadow">
						<div class="row g-0">
							<div class="col-xl-3 col-md-4">
								<a href="#" class="img-wrap">
									<img src="~/images/seviye1.png" alt="C1 Seviye" />
								</a>
							</div>
							<div class="col-xl-9 col-md-8 border-start">
								<div class="card-body">
									<a href="#"
									   class="h6 mb-3 title"
									   style="font-weight: bold; color: #b0578d">
										C1 Seviye (Gelişmiş)
									</a>
									<br /><br />
									<div class="mb-2">
										<span class="text-primary">
											C1 seviyesinde olan bir kişi, dili akıcı ve doğal bir
											şekilde kullanabilir, karmaşık konularda etkin bir
											şekilde iletişim kurabilir ve yüksek düzeyde okuma,
											yazma, dinleme ve konuşma becerilerine sahiptir.
										</span>
									</div>
									<br />

									<div class="d-grid gap-2 d-md-block">
										<a href="/Home/C1" class="btn btn-primary">
											<i class="fa-solid fa-magnifying-glass"
											   style="color: white; margin-right: 10px"></i>İncele
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="card product-card mb-3 shadow">
						<div class="row g-0">
							<div class="col-xl-3 col-md-4">
								<a href="#" class="img-wrap">
									<img src="~/images/seviye1.png" alt="C2 Seviye" />
								</a>
							</div>
							<div class="col-xl-9 col-md-8 border-start">
								<div class="card-body">
									<a href="#"
									   class="h6 mb-3 title"
									   style="font-weight: bold; color: #5b0888">
										C2 Seviye (Bilimsel)
									</a>
									<br /><br />
									<div class="mb-2">
										<span class="text-primary">
											Bu seviyede olan bir kişi, anadili İngilizce olan bir
											kişi kadar akıcı ve etkin bir şekilde iletişim kurabilir
											ve dili son derece karmaşık konularda ustalıkla
											kullanabilir. Makale vs. bilimsel metinlerde kullanılan
											dildir.
										</span>
									</div>
									<br />

									<div class="d-grid gap-2 d-md-block">
										<a href="/Home/C2" class="btn btn-primary">
											<i class="fa-solid fa-magnifying-glass"
											   style="color: white; margin-right: 10px"></i>İncele
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<hr />

	<footer>
		<div class="container text-center">
			<div class="row">
				<div class="col">
					<img src="~/images/logo.png" alt="Logo" style="margin-top: 40px" />
				</div>
				<div class="col">
					<p style="
                color: black;
                font-size: 24px;
                font-weight: bold;
                margin-top: 10px">
						Sosyal Medya
					</p>
					<a href="https://github.com/" target="_blank">
						<i class="fa-brands fa-github"
						   style="margin-left: 5px; font-size: 36px"></i>
					</a>
					<a href="https://linkedin.com/">
						<i class="fa-brands fa-linkedin"
						   style="margin-left: 5px; font-size: 36px"></i>
					</a>
					<a href="https://instagram.com/">
						<i class="fa-brands fa-instagram"
						   style="margin-left: 5px; font-size: 36px"></i>
					</a>
				</div>
				<div class="col">
					<p style="
                color: black;
                font-size: 24px;
                font-weight: bold;
                margin-top: 10px">
						Bunny Word Academy
					</p>
					<ul style="list-style-type: none">
						<li>
							<a href="/Message/Create"
							   style="text-decoration: none; color: #314e52">İletişim</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</footer>

	<script src="~/js/script.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"></script>
</body>
</html>
